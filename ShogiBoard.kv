<AppCore>:
    canvas.before:
        Color:
            rgba: self.get_background_color()
        Rectangle:
            pos: self.pos
            size: self.size
    ChessBoard:
        size: root.width/2, root.width/2
        pos: 0, root.height-root.width/2

<BoardSquare>:
    background_normal: "./boardimages/Light square.jpg"
    background_down: "./boardimages/Light square.jpg"
    canvas.before:
        Color:
            rgba: .5, .5, .5, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height
    text: self.get_position()
