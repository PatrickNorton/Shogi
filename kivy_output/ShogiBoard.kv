<CapturedSquare>:
    background_normal: "./images/Light square.jpg"
    background_down: "./images/Light square.jpg"
    background_color: 0, 0, 0, 0
    canvas.before:
        Color:
            rgba: app.get_background_color()
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height